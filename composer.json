{
    "name": "fioru/wordpress-plugin_template",
    "version": "0.0.0",
    "type": "wordpress-plugin",
    "extra": {
        "installer-name": "wordpress-plugin"
    },
    "scripts": {
      "test": "phpunit --verbose --configuration phpunit.xml.dist --prepend vendor/autoload.php --testdox --colors=always",
      "lint": "phplint ./ --exclude=vendor",
      "check": "phpcs",
      "fix": "phpcbf",
      "all": [ "@lint", "@check", "@test", "@secure" ]
    },
    "require": {
        "composer/installers": "2.x-dev"
    },
    "require-dev": {
        "fakerphp/faker": "^1.19",
        "overtrue/phplint": "^3.0",
        "yoast/phpunit-polyfills": "^1.0",
        "mockery/mockery": "^1.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/phpcompatibility-wp": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "phpcompatibility/php-compatibility": "^9.3",
        "wp-coding-standards/wpcs": "dev-develop",
        "enlightn/security-checker": "dev-main"
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        }
    }
}
